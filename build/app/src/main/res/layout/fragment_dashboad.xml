<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.TakeMe.Fragments.DriverDashboad">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="14.2"
            android:padding="10dp"

            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/back"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:weightSum="15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDate"
                                android:textColor="@color/White"
                                android:textSize="30dp"
                                android:textStyle="bold"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:text="TEMPERATURE" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_weight="3"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/main_boarder"
                                android:layout_weight="0"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvManualTemp"
                                    android:layout_width="wrap_content"
                                    android:textAlignment="center"
                                    android:textSize="40dp"
                                    android:textColor="@color/White"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:text="30°C" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:padding="5dp"
                                android:background="@drawable/main_boarder"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvAutoTemp"

                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:textSize="40dp"
                                    android:textStyle="bold"
                                    android:textColor="@color/White"
                                    android:gravity="center"
                                    android:text="29°C" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"

                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/main_boarder"
                                    android:textColor="@color/White"
                                    android:textSize="20dp"
                                    android:layout_weight="1"
                                    android:textAlignment="center"
                                    android:text="" />

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:textColor="@color/White"
                                    android:textAlignment="center"
                                    android:textSize="20dp"
                                    android:background="@drawable/main_boarder"
                                    android:layout_height="match_parent"
                                    android:text="" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="10"
                        android:layout_marginTop="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="8"

                            android:background="@drawable/main_boarder"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:textStyle="italic"
                                android:textColor="@color/White"
                                android:textAlignment="center"
                                android:textSize="25dp"
                                android:text="SYMPTOMS" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">



                                    <ListView
                                        android:id="@+id/lvSymptoms"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
           android:weightSum="4"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/back"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"

                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:background="@drawable/main_boarder"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="40dp"
                    android:textColor="@color/White"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/tvStatus"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:text="NO"
                    android:textStyle="bold"
                    android:textSize="40dp"
                    android:textColor="@color/White"
                    android:background="@drawable/main_boarder"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">


                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:max="46"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/btnMapDoctors"
                    android:visibility="invisible"
                    android:background="@color/back"
                    android:textColor="@color/White"
                    android:shadowColor="@color/Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIEW DOCTORS NEAR ME" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnMapMembers"
                    android:shadowColor="@color/Gray"
                    android:background="@color/back"
                    android:textColor="@color/White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VIEW MEMBER'S TEMPERATURE" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical">

        </LinearLayout>
    </LinearLayout>
</FrameLayout>