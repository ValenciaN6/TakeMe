<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/border"

    android:layout_height="match_parent"
    tools:context="com.example.TakeMe.MainFrag">


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"

        android:weightSum="11"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/thermo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:weightSum="100"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:layout_weight="20"
                android:orientation="vertical"
                android:weightSum="70">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:weightSum="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvSystemName"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="35dp"
                        android:background="@drawable/border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XXX999" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:weightSum="10"
                    android:gravity="bottom"
                    android:textColor="#000"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:textSize="20dp"
                        android:gravity="bottom"
                        android:textStyle="italic"
                        android:layout_height="match_parent"
                        android:padding="3dp"
                        android:background="@drawable/column"
                        android:textColor="#000"
                        android:layout_weight="6.3"
                        android:inputType="textPersonName"
                        android:text="Label" />

                    <TextView
                        android:id="@+id/editText2"
                        android:layout_weight="3.7"
                        android:layout_width="match_parent"
                        android:textStyle="italic"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:padding="3dp"
                        android:background="@drawable/column"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:text="Value" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6.3"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="24dp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Location" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.7"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <ScrollView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <TextView
                                        android:id="@+id/tvLocation"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="20m"
                                        android:textColor="#000"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </ScrollView>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6.3"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="24dp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Distance" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.7"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDistance"
                                android:textStyle="bold"
                                android:textSize="23dp"
                                android:textColor="#000"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20m" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6.3"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="24dp"
                                android:layout_width="match_parent"
                                android:textColor="#000"
                                android:layout_height="wrap_content"
                                android:text="Bag State" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.7"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBagState"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Open"
                                android:textSize="23dp"
                                android:textColor="#000"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:weightSum="2"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="10"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6.3"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:textSize="24dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="Connected" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="3.7"
                            android:padding="3dp"
                            android:background="@drawable/column"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvConnection"
                                android:textStyle="bold"
                                android:textSize="23dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="#000"
                                android:text="Yes" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:orientation="vertical">

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:padding="2dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnsetting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="settings" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/btntrace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="trace" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>